{
  "name": "optioncharts",
  "private": true,
  "scripts": {
    "postinstall": "next telemetry disable",
    "dev": "next dev",
    "build": "next build",
    "build:export": "npm run build && npm run export",
    "build:sitemap": "next-sitemap --config next-sitemap.config.js",
    "build:ogImages": "next-static-og-images --width 600 --height 315 --deviceScaleFactor 2",
    "postbuild": "npm run build:sitemap && npm run build:ogImages",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "prepare": "husky install .husky"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "next": "12.0.8",
    "next-seo": "^4.29.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-financial-charts": "^1.3.2",
    "react-icons": "^4.3.1",
    "react-option-charts": "^0.0.8",
    "sass": "^1.49.0",
    "use-immer": "^0.6.0"
  },
  "devDependencies": {
    "@types/gtag.js": "^0.0.8",
    "@types/node": "17.0.10",
    "@types/react": "17.0.38",
    "autoprefixer": "^10.4.2",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.2",
    "next-sitemap": "^1.9.12",
    "next-static-og-images": "^0.0.4",
    "next-transpile-modules": "^9.0.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.15",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
